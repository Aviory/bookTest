<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:gravity="center"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/img_remove_murk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:src="@drawable/bin_blue" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:orientation="vertical">

        <com.getbooks.android.ui.widget.ArialNormalTextView
            android:id="@+id/txt_book_murk"
            android:layout_gravity="center"
            android:gravity="center"
            style="@style/ContentItemListTextStyle" />

        <com.getbooks.android.ui.widget.ArialNormalTextView
            android:id="@+id/txt_book_murk_name"
            android:layout_gravity="center"
            android:gravity="center"
            style="@style/ContentItemListTextStyle" />

    </LinearLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:src="@drawable/bookmark_blue_small" />

</LinearLayout>