<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/add_note_background">

    <EditText
        android:id="@+id/edit_txt_note"
        android:textSize="@dimen/add_note_txt_size"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <com.getbooks.android.ui.widget.ArialNormalTextView
        android:id="@+id/txt_save_note"
        android:layout_width="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginBottom="@dimen/close_margin_add_note"
        android:text="Save Note"
        android:textSize="@dimen/add_note_txt_size"
        android:textColor="@color/blue"
        android:layout_height="wrap_content" />

    <ImageView
        android:id="@+id/img_close_add_note"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|right"
        android:layout_marginBottom="@dimen/close_margin_add_note"
        android:src="@drawable/close_blue" />
</FrameLayout>