<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:minHeight="1000dp"
    android:minWidth="1000dp"
    android:background="@color/color_white">

    <RadioGroup
        android:id="@+id/radioGroup1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/btn_service_margin_top"
        android:orientation="horizontal" >
        <RadioButton
            android:id="@+id/btn_service_left"
            android:layout_width="@dimen/btn_service_width"
            android:layout_height="@dimen/btn_service_heigth"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/btn_left_service_margin"
            android:button="@null"
            android:gravity="center"
            android:background="@drawable/rbtn_bg_service_privacy"
            android:textColor="@drawable/selector_btn_service_privacy_txt_color"
            android:textSize="@dimen/btn_service_txt_size"
            android:text="@string/txt_btn_service_left"/>

        <RadioButton
            android:id="@+id/btn_service_right"
            android:layout_width="@dimen/btn_service_width"
            android:layout_height="@dimen/btn_service_heigth"
            android:layout_marginLeft="@dimen/btn_right_servise_margin_left"
            android:gravity="center"
            android:checked="true"
            android:button="@null"
            android:background="@drawable/rbtn_bg_service_privacy"
            android:textColor="@drawable/selector_btn_service_privacy_txt_color"
            android:textSize="@dimen/btn_service_txt_size"
            android:text="@string/txt_btn_service_rigth"/>

    </RadioGroup>

    <com.getbooks.android.ui.widget.left_menu_items.CustomSeekBar
        android:id="@+id/servise_seek_bar"
        android:rotation="270"
        android:layout_width="@dimen/service_seek_bar_height"
        android:layout_height="@dimen/service_seek_bar_width"
        android:layout_marginTop="@dimen/service_seek_mar_marg_top"
        android:layout_marginLeft="@dimen/servise_margin_seek_bar"
        android:layout_marginStart="@dimen/servise_margin_seek_bar"
        android:padding="0dp"
        android:progressDrawable="@drawable/service_custom_seek_bar"
        android:thumb="@drawable/thumb_vertical"
        android:layout_gravity="left"
        android:thumbOffset="0dp"/>

    <com.getbooks.android.ui.widget.ArialNormalTextView
        android:id="@+id/txt_service_privacy"
        android:layout_width="@dimen/txt_width_servise_body"
        android:layout_height="@dimen/txt_heigth_servise_body"
        android:layout_below="@id/radioGroup1"
        android:layout_marginTop="@dimen/txt_service_margin_top"
        android:layout_marginLeft="@dimen/txt_body_service_margin_left"
        android:gravity="center_horizontal"
        android:layout_centerHorizontal="true"
        android:textSize="@dimen/txt_size_body_servis_privacy"
        android:textColor="@color/gray"/>


    <ImageView
        android:id="@+id/service_privacy_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/left_menu_service_margin_bot"
        android:src="@drawable/close_blue"/>

</RelativeLayout>