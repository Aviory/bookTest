<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black_translucent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/menu_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/blue"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_small"
            android:layout_marginLeft="@dimen/margin_smallest"
            android:layout_marginTop="@dimen/margin_small"
            android:background="@drawable/menu" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_medium"
            android:background="@drawable/lib" />

        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.2" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/txt_library"
            android:textSize="@dimen/font_6" />

        <ImageView
            android:layout_width="@dimen/separator_width"
            android:layout_height="@dimen/separator_height"
            android:layout_marginLeft="@dimen/margin_smallest"
            android:layout_marginRight="@dimen/margin_smallest"
            android:background="@android:color/white" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/txt_catalog"
            android:textSize="@dimen/txt_size" />

        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.2" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/margin_smallest"
            android:background="@drawable/settings" />

    </LinearLayout>

    <ImageView
        android:id="@+id/img_arrow_first"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/menu_main"
        android:layout_marginLeft="@dimen/margin_medium"
        android:layout_marginTop="@dimen/margin_smallest"
        android:src="@drawable/tutorial_arrow_1" />

    <TextView
        android:id="@+id/txt_first"
        style="@style/TutorialTextStyle"
        android:layout_below="@id/img_arrow_first"
        android:layout_marginLeft="@dimen/margin_arrow_left"
        android:text="@string/txt_arrow_first" />

    <ImageView
        android:id="@+id/img_arrow_second"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/menu_main"
        android:layout_marginLeft="@dimen/margin_between_arrow"
        android:layout_marginTop="@dimen/margin_smallest"
        android:layout_toRightOf="@id/img_arrow_first"
        android:src="@drawable/tutorial_arrow_1" />

    <TextView
        style="@style/TutorialTextStyle"
        android:layout_below="@id/img_arrow_second"
        android:layout_marginLeft="@dimen/margin_arrow_right"
        android:layout_toRightOf="@id/txt_first"
        android:text="@string/txt_arrow_second" />

    <ImageView
        android:id="@+id/img_arrow_third"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/menu_main"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/margin_smallest"
        android:src="@drawable/tutorial_arrow_1" />

    <TextView
        android:id="@+id/txt_third"
        style="@style/TutorialTextStyle"
        android:layout_below="@+id/img_arrow_third"
        android:layout_centerHorizontal="true"
        android:text="@string/txt_arrow_third" />

    <ImageView
        android:id="@+id/img_arrow_four"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/menu_main"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="@dimen/margin_biggest"
        android:layout_marginTop="@dimen/margin_smallest"
        android:layout_toRightOf="@id/img_arrow_third"
        android:src="@drawable/tutorial_arrow_1" />

    <TextView
        style="@style/TutorialTextStyle"
        android:layout_below="@id/img_arrow_four"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="@dimen/margin_small"
        android:layout_toRightOf="@id/txt_third"
        android:text="@string/txt_arrow_four" />

    <ImageView
        android:id="@+id/img_arrow_five"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/menu_main"
        android:layout_marginRight="@dimen/margin_small"
        android:layout_marginTop="@dimen/margin_smallest"
        android:src="@drawable/tutorial_arrow_1" />

    <TextView
        style="@style/TutorialTextStyle"
        android:layout_alignParentRight="true"
        android:layout_below="@id/img_arrow_five"
        android:layout_marginRight="@dimen/margin_arrow_right"
        android:text="@string/txt_arrow_five" />

    <ImageView
        android:id="@+id/img_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/margin_medium"
        android:src="@drawable/close_blue" />

    <TextView
        style="@style/TutorialTextStyle"
        android:layout_above="@id/img_close"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/margin_close_img"
        android:text="@string/txt_tutorial_main" />

</RelativeLayout>