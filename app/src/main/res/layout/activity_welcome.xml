<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/welcome_bg"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/img_logo_welcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/margin_top_welcome"
        android:src="@drawable/welcome_logo" />

    <LinearLayout
        android:id="@+id/layout_welcome_first"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/img_logo_welcome"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="@dimen/margin_welcome_text_left"
        android:layout_marginRight="@dimen/margin_welcome_text_right"
        android:layout_marginTop="@dimen/welcome_txt_top_margin"
        android:orientation="horizontal">

        <com.getbooks.android.ui.widget.ArialNormalTextView
            style="@style/TextWelcomeStyle"
            android:layout_centerInParent="true"
            android:layout_weight="1"
            android:text="@string/txt_welcome_first" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_left_bookmark_welcome"
            android:layout_marginTop="@dimen/margin_top_bookmark_welcome"
            android:layout_weight="0"
            android:src="@drawable/welcome_bookmark" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_welcome_second"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@id/layout_welcome_first"
        android:layout_below="@id/layout_welcome_first"
        android:orientation="horizontal">

        <com.getbooks.android.ui.widget.ArialNormalTextView
            style="@style/TextWelcomeStyle"
            android:layout_centerInParent="true"
            android:layout_weight="1"
            android:text="@string/txt_welcome_second" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_left_bookmark_welcome"
            android:layout_marginTop="@dimen/margin_top_bookmark_welcome"
            android:layout_weight="0"
            android:src="@drawable/welcome_bookmark" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_welcome_third"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@id/layout_welcome_first"
        android:layout_below="@id/layout_welcome_second"
        android:orientation="horizontal">

        <com.getbooks.android.ui.widget.ArialNormalTextView
            style="@style/TextWelcomeStyle"
            android:layout_centerInParent="true"
            android:layout_weight="1"
            android:text="@string/txt_welcome_third" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/margin_left_bookmark_welcome"
            android:layout_weight="0"
            android:src="@drawable/welcome_bookmark" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/layout_welcome_four"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@id/layout_welcome_first"
        android:layout_below="@id/layout_welcome_third"
        android:orientation="horizontal">

        <com.getbooks.android.ui.widget.ArialNormalTextView
            style="@style/TextWelcomeStyle"
            android:layout_centerInParent="true"
            android:layout_weight="1"
            android:text="@string/txt_welcome_four" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/margin_left_bookmark_welcome"
            android:layout_weight="0"
            android:src="@drawable/welcome_bookmark" />
    </LinearLayout>


    <TextView
        android:id="@+id/txt_next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/layout_welcome_four"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/magin_top_txt_btn"
        android:background="@drawable/background_selector"
        android:paddingBottom="@dimen/padding_bottom_txt_btn"
        android:paddingLeft="@dimen/padding_side_txt_btn"
        android:paddingRight="@dimen/padding_side_txt_btn"
        android:paddingTop="@dimen/padding_bottom_txt_btn"
        android:text="@string/txt_welcome"
        android:textSize="@dimen/item_content_size" />

</RelativeLayout>