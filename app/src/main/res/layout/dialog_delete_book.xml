<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dialog_background"
    android:orientation="vertical">

    <com.getbooks.android.ui.widget.ArialNormalTextView
        style="@style/TextDialogsStyle"
        android:layout_gravity="center"
        android:gravity="top|center"
        android:paddingBottom="@dimen/padding_dialog_del_bottom"
        android:paddingLeft="@dimen/padding_sides_dialog_del"
        android:paddingRight="@dimen/padding_sides_dialog_del"
        android:paddingTop="@dimen/padding_dialog_del_top"
        android:text="@string/txt_delete_book_question" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/padding_bottom_dialog_del">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/round_arrow" />


            <com.getbooks.android.ui.widget.ArialNormalTextView
                android:id="@+id/txt_cancel"
                style="@style/TextDialogsStyle"
                android:layout_gravity="center"
                android:text="@string/txt_cancel" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/bin_blue_big" />

            <com.getbooks.android.ui.widget.ArialNormalTextView
                android:id="@+id/txt_delete"
                style="@style/TextDialogsStyle"
                android:layout_gravity="center"
                android:text="@string/txt_delete" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>