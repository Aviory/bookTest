<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="SplashScreenTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="CatalogTheme" parent="AppTheme">
        <item name="android:windowAnimationStyle">@style/AnimationTheme</item>
    </style>

    <style name="AnimationTheme" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/slide_out_bottom</item>
        <item name="android:activityOpenExitAnimation">@anim/stay</item>
        <!--<item name="android:activityCloseEnterAnimation">@anim/slide_out_down</item>-->
        <!--<item name="android:activityCloseExitAnimation">@anim/stay</item>-->
    </style>


    <style name="TutorialTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/color_white</item>
        <item name="android:textSize">@dimen/txt_tutorial</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="TutorialImageArrowStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/margin_smallest</item>
        <item name="android:src">@drawable/tutorial_arrow_1</item>
    </style>

    <style name="TutorialCloseImgageStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:src">@drawable/close_blue</item>
        <item name="android:layout_marginBottom">@dimen/margin_close_img_bottom</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_alignParentBottom">true</item>
    </style>

    <style name="LeftMenuTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/left_menu_txt_size</item>
        <item name="android:textColor">@color/color_white</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">left</item>
    </style>

    <style name="RightMenuTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/left_menu_txt_size</item>
        <item name="android:textColor">@color/color_white</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">right</item>
    </style>

    <style name="TextContentSelectorStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/txt_content_selector_size</item>
        <item name="android:paddingRight">@dimen/btn_background_padding</item>
        <item name="android:paddingLeft">@dimen/btn_background_padding</item>
        <item name="android:paddingTop">2dp</item>
        <item name="android:paddingBottom">3dp</item>
    </style>


    <style name="TextDialogsStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/log_out_question_size</item>
        <item name="android:textColor">@color/gray</item>
    </style>


    <style name="ContentItemListTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/item_content_size</item>
        <item name="android:textColor">@color/gray</item>
    </style>

    <style name="ScrollbarContentListStyle">
        <item name="android:scrollbarAlwaysDrawVerticalTrack">true</item>
        <item name="android:scrollbarStyle">outsideOverlay</item>
        <item name="android:scrollbars">vertical</item>
        <item name="android:fadeScrollbars">true</item>
        <item name="android:scrollbarThumbVertical">@drawable/scrollbar_vertical_thumb</item>
        <item name="android:scrollbarTrackVertical">@drawable/scrollbar_vertical_track</item>
        <item name="android:scrollbarSize">@dimen/scroll_bar_width</item>
        <item name="android:scrollbarFadeDuration">2000</item>
        <item name="android:scrollbarDefaultDelayBeforeFade">1000</item>
        <item name="android:verticalScrollbarPosition">left</item>
    </style>

    <style name="CustomRadioButtonStyle" parent="@android:style/Widget.CompoundButton.RadioButton">
        <item name="android:button">@drawable/custom_btn_radio</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="CustomToggleButtonStyle" parent="@android:style/Widget.CompoundButton.RadioButton">
        <item name="android:button">@drawable/custom_btn_radio</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_gravity">center</item>

        <item name="android:textOn">@null</item>
        <item name="android:textOff">@null</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:textSize">0dp</item>
        <item name="android:background">@null</item>
    </style>

</resources>
